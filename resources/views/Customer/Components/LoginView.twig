{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}
{% set backlink = request.get("backlink") %}

{{ component( "Ceres::Customer.Components.GuestLogin" ) }}

<script type="x/template" id="vue-login-view" >
    <div class="container-max login">
        <div class="row mb-5">
            <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">
                    
                    <div class="row guest-login">
                    {% if "my-account" not in backlink %}
                    <h2>Fast geschafft</h2>
                    <p>Im nächsten Schritt gelangen Sie zur Kasse, hier können Sie Ihre Einkaufstasche noch einmal überprüfen, sowie Zahlungs- und Versandangaben vornehmen.</p>
                            <button class="btn btn-primary btn-block mb-3" @click="openGuestModal()">
                                <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                                {{ trans("Ceres::Template.loginOrderAsGuest") }}
                            </button>
                    {% endif %}
                    </div>
                    
                    <div class="seller-login-close" onclick="if(document.getElementById('sellerlogin').style.display=='none'){ document.getElementById('sellerlogin').style.display='block';} else {document.getElementById('sellerlogin').style.display='none'; }">» Händler-Login</div>

                    <div class="row seller-login" id="sellerlogin" style="display:none;">
                    <div onclick="if(document.getElementById('sellerlogin').style.display=='block'){ document.getElementById('sellerlogin').style.display='none';} else {document.getElementById('sellerlogin').style.display='block'; }"><i class="fas fa-times"></i> Händler-Login schließen</div>
                    <div>
                        <h1 class="login-view-title mb-5">{{ trans("Ceres::Template.login") }}</h1>
                        <login template="#vue-login" backlink="{{ backlink | url_encode }}" has-to-forward="true"></login>
                    </div>
                    </div>
                    
                      
                    
                {{ LayoutContainer.show("Ceres::Login.AdditionalContentAfterButtons") }}
            </div>
        </div>
        <guest-login template="#vue-guest-login" backlink="{{ backlink | url_encode }}"></guest-login>
        
    </div>
</script>
